<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white">
    <TextView
		android:id="@+id/speed_text"
		style="@style/ECGViewStyle"
		android:text="@string/speed" />
    <SeekBar
        android:id="@+id/speed"
        style="@style/ECGSeekStyle"
		android:layout_toRightOf="@+id/speed_text"/>
    <TextView
		android:id="@+id/speed_value"
		style="@style/ECGValueStyle"
		android:layout_toRightOf="@+id/speed"
		android:text="@string/none" />
    <TextView
		android:id="@+id/power_text"
		style="@style/ECGViewStyle"
		android:text="@string/power"
		android:layout_below="@+id/speed" />
    <SeekBar
        android:id="@+id/power"
		style="@style/ECGSeekStyle"
		android:layout_toRightOf="@+id/power_text"
		android:layout_below="@+id/speed"/>
    <TextView
		android:id="@+id/power_value"
		style="@style/ECGValueStyle"
		android:layout_toRightOf="@+id/power"
		android:layout_below="@+id/speed"
		android:text="@string/none" />
    
	<ua.stu.view.scpview.ImageViewer
		android:id="@+id/ImageViewer"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/check_revert_ecg" />


	<TextView
	    android:id="@+id/zoom"
	    style="@style/ECGValueStyle"
	    android:layout_alignBaseline="@+id/check_revert_ecg"
	    android:layout_alignBottom="@+id/check_revert_ecg"
	    android:layout_toRightOf="@+id/check_revert_ecg"
	    android:text="@string/none" />

</RelativeLayout>