<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="bottom"
	android:background="@android:color/darker_gray">
	
    <RadioGroup
		android:layout_width="fill_parent"
		android:layout_height="60dp"
		android:layout_alignParentBottom="true"
		android:background="@android:color/darker_gray"
		android:orientation="horizontal"
	  >
		<RadioButton
		  android:id="@+id/slider_file_chooser"
		  style="@style/slider_panel"
		  android:drawableTop="@drawable/file_chooser"
		  android:text="@string/slider_open_file"
		/>
		<RadioButton
		  android:id="@+id/slider_camera"
		  style="@style/slider_panel"
		  android:drawableTop="@drawable/camera"
		  android:text="@string/slider_camera"
		/>
		<RadioButton
		  android:id="@+id/slider_patient"
		  style="@style/slider_panel"
		  android:drawableTop="@drawable/patient_slider"
		  android:text="@string/slider_patient"
		/>
		<RadioButton
		  android:id="@+id/slider_other"
		  style="@style/slider_panel"
		  android:drawableTop="@drawable/info"
		  android:text="@string/slider_other"
		/>
		<RadioButton
		  android:id="@+id/slider_ecg_revert"
		  style="@style/slider_panel"
		  android:drawableTop="@drawable/revert_ecg"
		  android:text="@string/revert_ecg"
		/>
	</RadioGroup>
</RelativeLayout>