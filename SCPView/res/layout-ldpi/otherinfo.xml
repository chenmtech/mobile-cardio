<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
    	    android:id="@+id/other_info_scroll_view"
    	    android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
	        <RelativeLayout
    	        android:id="@+id/other_info"
    	        style="@style/RelativeStyle">
    	        <RelativeLayout
    	            android:id="@+id/check_dev_take_ecg_layout"
    	        	style="@style/RelativeStyle">
					<CheckBox
						android:id="@+id/check_dev_take_ecg"
						style="@style/CheckStyleSelected"
						android:text="@string/title_device_get_ecg" />
					<FrameLayout
						android:id="@+id/frame_dev_take_ecg"
						style="@style/FrameStyle"
						android:layout_below="@+id/check_dev_take_ecg">
					</FrameLayout>
				 </RelativeLayout>
				 <RelativeLayout
    	            android:id="@+id/check_ecg_info_layout"
    	        	style="@style/RelativeStyle"
    	        	android:layout_below="@+id/check_dev_take_ecg_layout">
					<CheckBox
						android:id="@+id/check_ecg_info"
						style="@style/CheckStyleSelected"
						android:text="@string/ecg_info" />
					<FrameLayout
						android:id="@+id/frame_ecg_info"
						style="@style/FrameStyle"
						android:layout_below="@+id/check_ecg_info">
					</FrameLayout>
				</RelativeLayout> 
			 </RelativeLayout>
	</ScrollView>
</LinearLayout>